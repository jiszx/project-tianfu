/* components/order-goods-row/index.wxss */
@import '../../common/common.wxss';
.page-submiting-top{
  padding-top: 1px;
}
.components-goods-row{
  display: flex;
  height: 160rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-right: 30rpx;
}
.pull-right{
  float: right;
}
.goods-img{
  width: 120rpx;
  height: 120rpx;
  flex: 0 0 120rpx;
}
.goods-img image{
  width: 100%;
  height: 100%;
}
.goods-main{
  width: 100%;
  height: 150rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.goods-title{
  height: 70rpx;
}
.goods-title-text{
  font-size: 15px;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 400rpx;
}
.goods-price{
  font-size: 13px;
}
.goods-des .price-unit{
  color: #999999;
  font-size: 12px;
}
.goods-des .pull-right{
  color: #999999;
}
.van-hairline--bottom {
  border: 0 solid #eee;
  border-bottom-width: 1px;
}