.sku-bottom-wrapper{
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
  width: 100%;
  height: 200rpx;
  line-height: 100rpx;
}
.select-price{
  height: 100rpx;
  padding: 0 30rpx;
  overflow: hidden;
}
.van-hairline-top {
  border-top: 1px solid #d4d4d4;
  font-size: 15px;
  text-align: right;
}
.selected-num{
  padding-right: 68rpx;
}
.goods-sku-btn-wrapper{
  color: #fff;
  height: 100rpx;
}
.bg-yellow{
  background: #34C975;
}
.bg-error{
  background-color: #FF2D55;
}