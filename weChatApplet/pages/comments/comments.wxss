/* pages/comments/comments.wxss */
.comments-dec {
  background: #fff;
  padding: 0 30rpx;
}
.comments-dec:not(:last-child) {
  margin-bottom: 30rpx;
}
.goods-comment-type {
  border-top: 1px solid #efefef;
  padding-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
}
.goods-comment-type span {
  display: inline-block;
  text-align: center;
  background: #F3F3F3;
  color: #393939;
  width: 140rpx;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 33rpx;
  margin-bottom: 30rpx;
  font-size: 13px;
}
.goods-comment-type .active {
  color: #fff;
  background: #34C975;
}

/* 加载 */
.loading{  
  padding: 16rpx 0;  
  text-align: center;
  font-size: 14px;  
  color: #999999;
}