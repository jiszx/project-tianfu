/* pages/payType/payType.wxss */
.page-pay-type{
  position: relative;
  padding-bottom: 1rpx;
  height: 100%;
}
.pay-type{
  color: #939393;
}
.pay-type .page-content{
  background: #ffffff;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.pay-type-active {
  padding-top: 16rpx;
  border-top: 1px solid #eFeFeF;
}
.pay-type .delivery{
  margin-top: 30rpx;
}
.bottom-btn-wrapper{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #34C975;
  color: #ffffff;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  box-shadow: 0 -2px 10px rgba(136, 136, 136, 0.1);
}
.item-btn{
  display: inline-block;
  border: 1px solid #BFBFBF;
  border-radius: 2px;
  color: #939393;
  font-size: 12px;
  padding: 10rpx 20rpx;
  margin-top: 30rpx;
}
.item-btn.active{
  color: #ffffff;
  background: #34C975;
  border: 1px solid #34C975;
}
.time-pick-wrapper {
  background: #fff;
  border-top: 1px solid #eFeFeF;
}